<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/palta_2"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El Suculento"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#FF7043"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encuentra. Prueba. Reseña."
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Qué quieres hacer hoy?"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToMap"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Explorar Mapa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_dialog_map"
            app:iconTint="#FFFFFF"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:cornerRadius="16dp"
            app:backgroundTint="#FF7043"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoToReview"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Nueva Reseña"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:icon="@android:drawable/ic_menu_camera"
            app:iconTint="#FFFFFF"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:cornerRadius="16dp"
            app:backgroundTint="#8BC34A"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToSearch"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Buscar"
                    android:textSize="14sp"
                    app:icon="@android:drawable/ic_menu_search"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#546E7A"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToList"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Ver Lista"
                    android:textSize="14sp"
                    app:icon="@android:drawable/ic_menu_sort_by_size"
                    app:iconGravity="textStart"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#546E7A"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>